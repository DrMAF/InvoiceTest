@using Core.ViewModels.Responses.Invoices
@model InvoiceVM

@{
    ViewData["Title"] = "Create Invoice";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to create invoice.</p>


<h1>Sale Invoice</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateInvoice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <table class="table table-striped table-bordered bulk_action">
                <th>Item</th>
                <th>Qty</th>
                @for (int i = 0; i < Model?.Items?.Count; i++)
                {
                    <tr>
                        <td>
                            <input asp-for="@Model.Items[i].ProductName" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@Model.Items[i].Quantity" class="form-control" />
                        </td>
                    </tr>
                }
            </table>
            <div class="form-group">
                <input type="submit" value="Create Invoice" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
